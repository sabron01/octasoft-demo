{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
        <ul>
            {% for error in errors %}
                <span class="has-error">
                <i class="fa fa-exclamation tooltips" data-original-title="{{ error.message }}" data-container="body">
                {{ error.message }}</i>
                </span>
                
            {% endfor %}
        </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}